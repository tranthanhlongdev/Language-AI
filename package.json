    "install-all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "@google/generative-ai": "^0.24.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^3.1.10"
  }
}
